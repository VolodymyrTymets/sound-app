{
  "name": "electron-app",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "electron-dev": "electron ./main.js ",
    "electron-prod": "NODE_ENV=production electron ./main.js",
    "electron-prod-raspi": "MIC=1 NODE_ENV=production electron ./main.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "pack-linux": "electron-packager --overwrite --asar --platform=linux --arch=x64 --icon=./public/icons/icon.png --out=release-builds ./ sound-app",
    "pack-raspi": "electron-packager --overwrite --asar --platform=linux --arch=ia32, --icon=./public/icons/icon.png --out=release-builds ./ sound-app",
    "build": "sh prebuild.sh && NODE_ENV=production npm run pack-linux",
    "build-raspi": "sh prebuild.sh && NODE_ENV=production npm run pack-raspi"
  },
  "build": {
    "appId": "your.id",
    "mac": {
      "category": "your.app.category.type"
    },
    "linux": {
      "target": "deb"
    }
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^6.0.0",
    "node-pre-gyp": "^0.10.3",
    "server": "file:../server",
    "threads": "^0.12.0"
  },
  "devDependencies": {
    "electron": "^2.0.6",
    "electron-builder": "^20.26.1",
    "electron-rebuild": "^1.8.2"
  }
}
